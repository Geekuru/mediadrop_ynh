{
	"name": "Mediadrop",
	"id": "mediadrop",
	"packaging_format": 1,
	"description": {
		"en": "Mediadrop - The Web’s Open Source Video Platform",
		"fr": "Mediadrop - Plateforme web vidéo Open Source"
	},
	"version": "1.0.1",
	"url": "http://mediadrop.video/",
	"license": "free",
	"maintainer": {
		"name": "cyp",
		"email": "cyp@rouquin.me"
	},
	"requirements": {
		"yunohost": ">> 2.4.0"
	},
	"multi_instance": true,
	"services": [
		"nginx",
		"php5-fpm",
		"mysql"
	],
	"arguments": {
		"install" : [
			{
				"name": "domain",
				"type": "domain",
				"ask": {
					"en": "Choose a domain name for Mediadrop",
					"fr": "Choisissez un nom de domaine pour Mediadrop"
				},
				"example": "example.org"
			},
			{
				"name": "path",
				"type": "path",
				"ask": {
					"en": "Choose a path for Mediadrop",
					"fr": "Choisissez un chemin pour Mediadrop"
				},
				"example": "/mediadrop",
				"default": "/mediadrop"
			},
			{
				"name": "admin",
				"type": "user",
				"ask": {
					"en": "Choose the Mediadrop administrator (must be an existing YunoHost user)",
					"fr": "Administrateur du site (doit être un utilisateur YunoHost existant)"
				},
				"example": "johndoe"
			},
			{
				"name": "multisite",
				"ask": {
					"en": "Enable multisite option ?",
					"fr": "Activer l'option multisite ?"
				},
				"choices": ["Yes", "No"],
				"default": "No"
			},
			{
				"name": "is_public",
				"ask": {
					"en": "Is it a public Mediadrop site ?",
					"fr": "Est-ce un site public ?"
				},
				"choices": ["Yes", "No"],
				"default": "Yes"
			},
			{
				"name": "language",
				"ask": {
					"en": "Choose the application language",
					"fr": "Choisissez la langue de l'application"
				},
				"choices": ["en_EN", "fr_FR"],
				"default": "fr_FR"
			}
		]
	}
}